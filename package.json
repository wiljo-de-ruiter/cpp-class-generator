{
  "name": "cpp-class-generator",
  "displayName": "C++ Class Generator",
  "description": "Genereert automatisch een C++ class (header + source) met copyright en structuur.",
  "version": "1.3.0",
  "publisher": "Wiljo de Ruiter",
  "icon": "media/icon.png",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onCommand:cpp-class-generator.createFilesForNewClass"
  ],
  "contributes": {
    "commands": [
      {
        "command": "cpp-class-generator.insertCopyright",
        "title": "Insert or update copyright file header at top of file",
        "category": "C++"
      },
      {
        "command": "cpp-class-generator.insertClassHeader",
        "title": "Insert C++ Class Comment Header",
        "category": "C++"
      },
      {
        "command": "cpp-class-generator.insertClassDeclaration",
        "title": "Insert C++ Class Declaration",
        "category": "C++"
      },
      {
        "command": "cpp-class-generator.insertClassDefinition",
        "title": "Insert C++ Class Definition",
        "category": "C++"
      },
      {
        "command": "cpp-class-generator.insertNewClass",
        "title": "Insert C++ Class Declaration and Definition",
        "category": "C++"
      },
      {
        "command": "cpp-class-generator.createFilesForNewClass",
        "title": "Create files for new C++ Class",
        "category": "C++"
      }
    ],
    "configuration": {
      "title": "C++ Class Generator",
      "properties": {
        "cppClassGenerator.authorName": {
          "type": "string",
          "default": "Enter your name here",
          "description": "Name of the developer that is used in the copyright file header."
        },
        "cppClassGenerator.companyName": {
          "type": "string",
          "default": "Enter your company name here",
          "description": "Name of the company that is used in the copyright file header."
        }
      }
    },
    "menus": {
      "editor/context": [
        {
          "command": "cpp-class-generator.insertCopyright",
          "group": "2_cutcopypaste"
        },
        {
          "command": "cpp-class-generator.insertClassHeader",
          "when": "resourceExtname === .h || resourceExtname == .cpp",
          "group": "2_cutcopypaste"
        },
        {
          "command": "cpp-class-generator.insertClassDefinition",
          "when": "resourceExtname == .cpp",
          "group": "2_cutcopypaste"
        },
        {
          "command": "cpp-class-generator.insertClassDeclaration",
          "when": "resourceExtname === .h || resourceExtname == .cpp",
          "group": "2_cutcopypaste"
        },
        {
          "command": "cpp-class-generator.insertNewClass",
          "when": "resourceExtname == .cpp",
          "group": "2_cutcopypaste"
        },
        {
          "command": "cpp-class-generator.createFilesForNewClass",
          "when": "resourceExtname === .h || resourceExtname == .cpp",
          "group": "2_cutcopypaste"
        }
      ],
      "explorer/context": [
        {
          "command": "cpp-class-generator.createFilesForNewClass",
          "group": "2_cutcopypaste"
        }
      ]
    },
    "snippets": [
      {
        "language": "c",
        "path": "./snippets/cpp.json"
      },
      {
        "language": "cpp",
        "path": "./snippets/cpp.json"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wiljo-de-ruiter/cpp-class-generator.git"
  },
  "license": "MIT",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^9.0.0",
    "@types/node": "^14.14.37",
    "mocha": "^9.0.0",
    "typescript": "^4.4.0",
    "vscode-test": "^1.6.0"
  }
}
