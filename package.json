{
  "name": "cpp-class-generator",
  "displayName": "C++ Class Generator",
  "description": "Genereert automatisch een C++ class (header + source) met copyright en structuur.",
  "version": "0.0.1",
  "publisher": "Wiljo de Ruiter",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onCommand:cpp-class-generator.createCppClass"
  ],
  "contributes": {
    "commands": [
      {
        "command": "cpp-class-generator.createCppClass",
        "title": "Create C++ Class"
      }
    ],
    "configuration": {
      "title": "C++ Class Generator",
      "properties": {
        "cppClassGenerator.useIncludeGuards": {
          "type": "boolean",
          "default": true,
          "description": "Gebruik include guards in de header files."
        },
        "cppClassGenerator.headerExtension": {
          "type": "string",
          "default": ".h",
          "enum": [".h", ".hpp"],
          "description": "Bestandsextensie voor header files."
        },
        "cppClassGenerator.addCopyrightHeader": {
          "type": "boolean",
          "default": true,
          "description": "Voeg automatisch een copyright-header toe."
        },
        "cppClassGenerator.classCommentStyle": {
          "type": "string",
          "default": "banner",
          "enum": ["none", "banner", "simple"],
          "description": "Stijl van class commentaar (none, simple of banner)."
        }
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wiljo-de-ruiter/cpp-class-generator.git"
  },
  "license": "MIT",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^9.0.0",
    "@types/node": "^14.14.37",
    "mocha": "^9.0.0",
    "typescript": "^4.4.0",
    "vscode-test": "^1.6.0"
  }
}
