{
  "name": "cpp-class-generator",
  "displayName": "C++ Class Generator",
  "description": "Genereert automatisch een C++ class (header + source) met copyright en structuur.",
  "version": "1.0.0",
  "publisher": "Wiljo de Ruiter",
  "icon": "media/icon.png",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onCommand:cpp-class-generator.createCppClass"
  ],
  "contributes": {
    "commands": [
      {
        "command": "cpp-class-generator.createCppClass",
        "title": "Create C++ Class",
        "category": "C++"
      }
    ],
    "configuration": {
      "title": "C++ Class Generator",
      "properties": {
        "cppClassGenerator.authorName": {
          "type": "string",
          "default": "Enter your name here",
          "description": "Name of the devloper that is used in the copyright file header."
        },
        "cppClassGenerator.companyName": {
          "type": "string",
          "default": "Enter your company name here",
          "description": "Name of the company that is used in the copyright file header."
        }
      }
    },
    "menus": {
      "explorer/context": [
        {
          "command": "cpp-class-generator.createCppClass",
          "group": "2_cutcopypaste"
        }
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wiljo-de-ruiter/cpp-class-generator.git"
  },
  "license": "MIT",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^9.0.0",
    "@types/node": "^14.14.37",
    "mocha": "^9.0.0",
    "typescript": "^4.4.0",
    "vscode-test": "^1.6.0"
  }
}
